/*sing in website*/
.form-signit {
    width: 100%;
    max-width: 350px;
    padding: 15px;
    margin: auto;
    box-sizing: border-box;

}
/*list check in*/
.list-group{
    list-style: none;
}
/* navigation*/
.main-nav ul{
    display: grid;
    grid-gap: 20px;
    padding: 0;
    list-style: none;
    grid-template-columns: repeat(4, 1fr);
}
.main-nav a{
    background: #f5f5f5;
    display: block;
    text-decoration: none;
    padding: 0.8rem;
    text-align: center;
    color: #383d41;
    text-transform: uppercase;
    font-size: 15px;
    box-shadow: 0px 0px 5px 0px rgba(50, 50, 50, 0.4);
    -webkit-box-shadow: 0px 0px 5px 0px rgba(50, 50, 50, 0.4);
    border-radius: 5px;
}
.main-nav a:hover{
    background: #696e72;
    color: #f5f5f5;
}
/* menu goods*/
#menu {
    display: flex;
    justify-content: left;
    flex-direction: column;
    list-style: none;
    width: 400px;
    height: 80%;
    margin-left: 20px;
    box-shadow: 0px 0px 5px 0px rgba(50, 50, 50, 0.4);
    -webkit-box-shadow: 0px 0px 5px 0px rgba(50, 50, 50, 0.4);
    border-radius: 5px;
    text-decoration: none;
    margin-top: 30px;
}
#menu .list a{
    text-decoration: none;
}
#menu li{
    margin-top: 2px;
}
#menu span{
    cursor: pointer;
}
